<span class="kt">void</span> <span class="n">ConcreteBuilder</span><span class="o">::</span><span class="n">buildPartA</span><span class="p">(){</span>
	<span class="n">m_prod</span><span class="o">-&gt;</span><span class="n">setA</span><span class="p">(</span><span class="s">"A Style "</span><span class="p">);</span> <span class="c1">//дёЌеђЊзљ„е»єйЂ иЂ…пјЊеЏЇд»Ґе®ћзЋ°дёЌеђЊдє§е“Ѓзљ„е»єйЂ   </span>
<span class="p">}</span>


<span class="kt">void</span> <span class="n">ConcreteBuilder</span><span class="o">::</span><span class="n">buildPartB</span><span class="p">(){</span>
	<span class="n">m_prod</span><span class="o">-&gt;</span><span class="n">setB</span><span class="p">(</span><span class="s">"B Style "</span><span class="p">);</span>
<span class="p">}</span>


<span class="kt">void</span> <span class="n">ConcreteBuilder</span><span class="o">::</span><span class="n">buildPartC</span><span class="p">(){</span>
	<span class="n">m_prod</span><span class="o">-&gt;</span><span class="n">setC</span><span class="p">(</span><span class="s">"C style "</span><span class="p">);</span>
<span class="p">}</span>
<span class="cm">/* е®љд№‰е»єйЂ е‡Ѕж•° */</span>
<span class="c1">///////////////////////////////////////////////////////////</span>
<span class="c1">//  Director.cpp</span>
<span class="c1">//  Implementation of the Class Director</span>
<span class="c1">//  Created on:      02-еЌЃжњ€-2014 15:57:01</span>
<span class="c1">//  Original author: colin</span>
<span class="c1">///////////////////////////////////////////////////////////</span>

<span class="cp">#include "Director.h"
</span>
<span class="n">Director</span><span class="o">::</span><span class="n">Director</span><span class="p">(){</span>
<span class="p">}</span>

<span class="n">Director</span><span class="o">::~</span><span class="n">Director</span><span class="p">(){</span>
<span class="p">}</span>

<span class="n">Product</span><span class="o">*</span> <span class="n">Director</span><span class="o">::</span><span class="n">constuct</span><span class="p">(){</span>
	<span class="n">m_pbuilder</span><span class="o">-&gt;</span><span class="n">buildPartA</span><span class="p">();</span>
	<span class="n">m_pbuilder</span><span class="o">-&gt;</span><span class="n">buildPartB</span><span class="p">();</span>
	<span class="n">m_pbuilder</span><span class="o">-&gt;</span><span class="n">buildPartC</span><span class="p">();</span>
	
	<span class="k">return</span> <span class="n">m_pbuilder</span><span class="o">-&gt;</span><span class="n">getResult</span><span class="p">();</span>
<span class="p">}</span>


<span class="kt">void</span> <span class="n">Director</span><span class="o">::</span><span class="n">setBuilder</span><span class="p">(</span><span class="n">Builder</span><span class="o">*</span> <span class="n">buider</span><span class="p">){</span>
	<span class="n">m_pbuilder</span> <span class="o">=</span> <span class="n">buider</span><span class="p">;</span>
<span class="p">}</span>


</code></pre></div></div>

<h3 id="46-жЁЎејЏе€†жћђ">4.6 жЁЎејЏе€†жћђ</h3>

<p>е»єйЂ иЂ…з±»дё­е®љд№‰дє†дє§е“Ѓзљ„е€›е»єж–№жі•е’Њиї”е›ћж–№жі•пјЊе№¶дЅїз”Ёдє†жЊ‡жЊҐиЂ…пјЊиї›иЎЊйљ”з¦»е’ЊжЊ‡жЊҐгЂ‚е®ѓе’Ње·ҐеЋ‚жЁЎејЏжњ‰ж‰ЂеЊєе€«пјЊе·ҐеЋ‚жЁЎејЏжЇе°†ж‰Ђжњ‰зљ„дє§е“Ѓж·»еЉ е€°е·ҐеЋ‚дё­пјЊеђ«жњ‰е…ЁйѓЁзљ„еЇ№и±Ўе’Њж–№жі•пјЊиї™дёЄжЇеЏЇд»Ґжњ‰йЂ‰ж‹©зљ„е€›е»єе·ҐеЋ‚еЇ№и±ЎгЂ‚йЃїе…Ќдє†й‡Ќз”ЁгЂ‚<strong>дё»и¦Ѓз”ЁдєЋпјЊжњ¬иє«еЇ№и±Ўе»єз«‹еЌЃе€†е¤Ќжќ‚зљ„з±»зљ„жћ„е»є</strong></p>

<p>ењЁе®ўж€·з«Їд»Јз Ѓдё­пјЊж— йЎ»е…іеїѓдє§е“ЃеЇ№и±Ўзљ„е…·дЅ“з»„иЈ…иї‡зЁ‹пјЊеЏЄйњЂзЎ®е®ље…·дЅ“е»єйЂ иЂ…зљ„з±»ећ‹еЌіеЏЇпјЊе»єйЂ иЂ…жЁЎејЏе°†е¤Ќжќ‚еЇ№и±Ўзљ„жћ„е»єдёЋеЇ№и±Ўзљ„иЎЁзЋ°е€†з¦»ејЂжќҐпјЊиї™ж ·дЅїеѕ—еђЊж ·зљ„жћ„е»єиї‡зЁ‹еЏЇд»Ґе€›е»єе‡єдёЌеђЊзљ„иЎЁзЋ°гЂ‚</p>

