</span>
<span class="n">using</span> <span class="n">namespace</span> <span class="n">std</span><span class="p">;</span>

<span class="kt">int</span> <span class="nf">main</span><span class="p">(</span><span class="kt">int</span> <span class="n">argc</span><span class="p">,</span> <span class="kt">char</span> <span class="o">*</span><span class="n">argv</span><span class="p">[])</span>
<span class="p">{</span>
	<span class="c1">//иЋ·еЏ–е»єйЂ иЂ…</span>
	<span class="n">ConcreteBuilder</span> <span class="o">*</span> <span class="n">builder</span> <span class="o">=</span> <span class="n">new</span> <span class="n">ConcreteBuilder</span><span class="p">();</span>
	<span class="c1">//ж“ЌдЅњиЂ…</span>
	<span class="n">Director</span>  <span class="n">director</span><span class="p">;</span>
	<span class="c1">//и®ѕзЅ®е»єйЂ иЂ…</span>
	<span class="n">director</span><span class="p">.</span><span class="n">setBuilder</span><span class="p">(</span><span class="n">builder</span><span class="p">);</span>
	<span class="c1">//е€›е»єдє§е“Ѓ</span>
	<span class="n">Product</span> <span class="o">*</span> <span class="n">pd</span> <span class="o">=</span>  <span class="n">director</span><span class="p">.</span><span class="n">constuct</span><span class="p">();</span>
	<span class="n">pd</span><span class="o">-&gt;</span><span class="n">show</span><span class="p">();</span>
	
	<span class="n">delete</span> <span class="n">builder</span><span class="p">;</span>
	<span class="n">delete</span> <span class="n">pd</span><span class="p">;</span>
	<span class="k">return</span> <span class="mi">0</span><span class="p">;</span>
<span class="p">}</span>
